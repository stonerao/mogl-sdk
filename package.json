{
    "name": "@w3d/monorepo",
    "version": "2.0.0",
    "private": true,
    "type": "module",
    "description": "W3D SDK v2.0 - 新一代 WebGL 3D 渲染引擎 Monorepo",
    "author": "W3D Team",
    "license": "MIT",
    "engines": {
        "node": ">=16.0.0",
        "pnpm": ">=8.0.0"
    },
    "scripts": {
        "dev": "pnpm --filter @w3d/examples dev",
        "dev:core": "pnpm --filter @w3d/core dev",
        "dev:components": "pnpm --filter @w3d/components dev",
        "dev:utils": "pnpm --filter @w3d/utils dev",
        "dev:examples": "pnpm --filter @w3d/examples dev",
        "build": "pnpm --filter @w3d/examples build",
        "build:core": "pnpm --filter @w3d/core build",
        "build:components": "pnpm --filter @w3d/components build",
        "build:utils": "pnpm --filter @w3d/utils build",
        "build:examples": "pnpm --filter @w3d/examples build",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint packages --ext .js",
        "lint:fix": "eslint packages --ext .js --fix",
        "format": "prettier --write \"packages/**/*.js\"",
        "format:check": "prettier --check \"packages/**/*.js\"",
        "changeset": "changeset",
        "version": "changeset version",
        "release": "pnpm build && changeset publish",
        "clean": "pnpm -r exec rimraf dist node_modules",
        "clean:dist": "pnpm -r exec rimraf dist",
        "clean:node_modules": "pnpm -r exec rimraf node_modules",
        "install:deps": "pnpm install && pnpm install:missing",
        "install:missing": "pnpm add -D jsdom @vitest/coverage-v8 rimraf"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@vitest/coverage-v8": "^1.3.1",
        "@vitest/ui": "^1.3.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "jsdom": "^24.0.0",
        "lerna": "^8.0.2",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "terser": "^5.44.0",
        "vite": "^5.1.4",
        "vitest": "^1.3.1"
    },
    "keywords": [
        "webgl",
        "3d",
        "threejs",
        "rendering",
        "engine",
        "monorepo",
        "lerna",
        "vite"
    ]
}
